{
  "name": "axcelscore-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AxcelScore frontend application",
  "scripts": {
    "dev": "vite",
    "build": "npm run prepare-assets && vite build",
    "build:local": "npm run setup-local-assets && vite build",
    "prepare-assets": "npm run ensure-question-banks",
    "ensure-question-banks": "mkdir -p public/question_banks && echo 'Question banks directory ready'",
    "setup-local-assets": "npm run clean-assets && npm run setup-symlink",
    "clean-assets": "rm -rf public/question_banks",
    "setup-symlink": "mkdir -p public && cd public && ln -sf ../../question_banks question_banks && echo 'Symlink created successfully'",
    "copy-question-banks": "if [ -d ../question_banks ]; then rm -rf public/question_banks && cp -r ../question_banks public/ && echo 'Question banks copied successfully'; else mkdir -p public/question_banks && echo 'Question banks directory created (source not found)'; fi",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist public/question_banks",
    "start": "npm run preview"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}